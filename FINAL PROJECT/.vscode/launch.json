    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug ANTLR4 grammar",
            "type": "antlr-debug",
            "request": "launch",
            "input": "input.txt",
            "grammar": "Segfault.g4",
            "startRule": "program",
            "printParseTree": true,
            "visualParseTree": true
        }, 
        {
            "type": "java",
            "name": "Debug (Launch) - Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Debug (Launch)-Main<FINAL PROJECT_a3ba12d8>",
            "request": "launch",
            "mainClass": "Main",
            "projectName": "FINAL PROJECT_a3ba12d8"
        }
    ]
}